<h1>In which item are you interested?</h1>
<div class="cards">
  <% @rents.each do |rent|%>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to rent.name, rent_path(rent), class: "nav-link" %>
      <%= rent.category %>
      <%= rent.description %>
      <%= rent.price %>
      <%= rent.start_date %>
      <%= rent.end_date %>
    </div>
  <% end %>
</div>
