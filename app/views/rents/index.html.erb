<h1>In which item are you interested?</h1>
<div class="flexbar">
    <div class="searchbar">
      <%= form_tag rents_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "What are you searching for?"
      %>
    </div>
    <div>
      <%= submit_tag "Search", class: "btn btn-search" %>
    </div>
  <% end %>
</div>
<div class='separate'>
  <div class="cards">
    <% @rents.each do |rent|%>
      <div class="card-category offer-cards">
        <div>
          <button type="button" class="btn btn-light placement"> <%= rent.price %><i class="fa-solid fa-euro-sign"></i> </button>
        </div>
        <%= link_to rent.name, rent_path(rent), class: "nav-link" %>
        <p><i class="fa-solid fa-signs-post">  </i><%= rent.category %></p>
        <p>What's this product about?</p><%= rent.description %>
        <hr>
        <p><strong>From:</strong>
        <%= rent.start_date %>
        <strong>Until:</strong>
        <%= rent.end_date %></p>
        <%= link_to "Interested? Go to the product page to learn more about it", rent_path(rent), class: "nav-link ", id: "color-black" %>
      </div>
    <% end %>
  </div>
  <div id="map"
     style="width: 50%; height: 100vh; position: sticky; top:0; background-color: #8AA2A9; border-radius: 5px; margin-right: 15px"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
